{
  "name": "Hide Tabs",
  "description": "Hide tabs when not interacting with them.",
  "version": "0.1",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Hide Tabs"
  },
  "manifest_version": 2
}
