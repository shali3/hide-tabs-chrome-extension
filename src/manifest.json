{
  "name": "Hide Tabs",
  "description": "Hide tabs when not interacting with them.",
  "version": "0.1",
  "icons": { 
    "16": "icons/icon16.png", 
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png" 
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Toggle Hide Tabs"
  },
  "manifest_version": 2
}
